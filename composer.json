{
  "name": "suralc/raq",
  "description": "A library exposing a simple interface to fetch resources on the web and perform queries on them",
  "keywords": [
    "request",
    "scrapper",
    "http",
    "fetch",
    "raq",
    "psr-7"
  ],
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "suralc",
      "email": "suralc.github@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Raq\\": "src"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Raq\\tests\\": "tests"
    }
  },
  "require": {
    "php": ">=5.5",
    "psr/http-message": "1.0.*",
    "guzzlehttp/guzzle": "~6.0",
    "symfony/dom-crawler": "~2.5",
    "symfony/css-selector": "~2.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.6"
  }
}
